{% extends 'admin/layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% set activeTab = 'ref' %}
{% set activeMenu = 'ref_tag' %}
{% set title = 'admin.tag.add.title' %}
{% if tag is defined %}
    {% set title = 'admin.tag.edit.title' %}
{% endif %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-divider">
                    {{ title|trans }}
                </div>
                <div class="panel-body pl-sm-5">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" id="form_submit" name="form[submit]" class="btn btn-space btn-primary"><i class="s7-diskette"></i> {{ 'form.save'|trans }}</button>
                                {% if tag is defined and not tag.enabled %}<a class="btn btn-space btn-primary" href="{{ path('admin_tag_remove', { 'id' : tag.id }) }}"><i class="s7-trash"></i> {{ 'form.remove'|trans }}</a>{% endif %}
                                <a class="btn btn-space btn-secondary" href="{{ path('admin_tag_list') }}">{{ 'form.cancel'|trans }}</a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}