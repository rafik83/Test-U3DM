{% extends 'admin/layout.html.twig' %}

{% set activeTab = 'order' %}
{% set activeMenu = 'quotation_list' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading panel-heading-divider">
                    {{ 'admin.quotation.list.title'|trans }}
                    <span class="panel-subtitle">{{ 'admin.quotation.list.subtitle'|trans }}</span>
                </div>
                <div class="panel-body">
                    <table id="table-admin-quotation-list" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ 'admin.quotation.list.column.id'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.ref.quotation'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.ref.project'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.type'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.customer'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.maker'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.date'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.closedat'|trans }}</th>
                            <th>{{ 'admin.quotation.list.column.status'|trans }}</th>
                            <th class="actions"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for quotation in quotations %}
                            <tr>
                                <td>{{ quotation.id }}</td>
                                <td><a href="{{ path('admin_quotation_see', { 'reference': quotation.reference }) }}">{{ quotation.reference }}</a></td>
                                <td><a href="{{ path('admin_project_see', { 'reference': quotation.project.reference }) }}">{{ quotation.project.reference }}</a></td>
                                <td data-order="{{ quotation.project.type.name }}">{{ quotation.project.type.name }}</td>
                                <td>{{ quotation.project.customer.fullname }}</td>
                                <td><a href="{{ path('admin_maker_see', { 'id': quotation.maker.id }) }}">{{ quotation.maker.company }}</a></td>
                                <td data-order="{{ quotation.savedAt|date('YmdHis') }}">{{ quotation.savedAt|date('d/m/Y', app.user.timezone) }}</td>
                                <td data-order="{{ quotation.project.closedAt|date('YmdHis') }}">{{ quotation.project.closedAt|date('d/m/Y H:i', app.user.timezone) }}</td>
                                <td data-order="{{ quotation.status }}">{{ quotation.adminReadableStatus }}</td>
                                <td class="actions"><a href="{{ path('admin_quotation_see', { 'reference': quotation.reference }) }}" class="icon"><i class="s7-right-arrow"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}