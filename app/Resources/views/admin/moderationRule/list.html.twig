{% extends 'admin/layout.html.twig' %}

{% set activeTab = 'setting' %}
{% set activeMenu = 'moderation_rule_list' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading panel-heading-divider">
                    <div class="tools"><a href="{{ path('admin_moderation_rule_add') }}"><span class="icon s7-magic-wand"></span> {{ 'admin.moderation.rule.add.title'|trans }}</a></div>
                    {{ 'admin.moderation.rule.list.title'|trans }}
                    <span class="panel-subtitle">{{ 'admin.moderation.rule.list.subtitle'|trans }}</span>
                </div>
                <div class="panel-body">
                    <table id="table-moderation-rule-list" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ 'admin.moderation.rule.list.column.position'|trans }}</th>
                            <th>{{ 'admin.moderation.rule.list.column.expression'|trans }}</th>
                            <th>{{ 'admin.moderation.rule.list.column.replace'|trans }}</th>
                            <th>{{ 'admin.moderation.rule.list.column.moderation.type'|trans }}</th>
                            <th class="actions"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for moderationRule in moderationRules %}
                                <td>{{ moderationRule.position }}</a></td>
                                <td>{{ moderationRule.expression }}</a></td>
                                <td>{{ moderationRule.replace }}</td>
                                <td>{% if moderationRule.needModerate == true %} 
                                        {{ 'admin.moderation.rule.list.moderation.manual'|trans}}
                                    {% else %}
                                        {{ 'admin.moderation.rule.list.moderation.auto'|trans}}
                                    {% endif %}
                                </td>
                                <td class="actions"><a href="{{ path('admin_moderation_rule_edit', { 'id': moderationRule.id }) }}" class="icon"><i class="s7-right-arrow"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


