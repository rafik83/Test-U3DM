{% extends 'admin/layout.html.twig' %}

{% set activeTab = 'setting' %}
{% set activeMenu = 'coupon_list' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading panel-heading-divider">
                    <div class="tools"><a href="{{ path('admin_coupon_add') }}"><span class="icon s7-magic-wand"></span> {{ 'admin.coupon.add.title'|trans }}</a></div>
                    {{ 'admin.coupon.list.title'|trans }}
                    <span class="panel-subtitle">{{ 'admin.coupon.list.subtitle'|trans }}</span>
                </div>
                <div class="panel-body">
                    <table id="table-coupon-list" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ 'admin.coupon.list.column.id'|trans }}</th>
                            <th>{{ 'admin.coupon.list.column.code'|trans }}</th>
                            <th>{{ 'admin.coupon.list.column.type'|trans }}</th>
                            <th>{{ 'admin.coupon.list.column.launch_date'|trans }}</th>
                            <th>{{ 'admin.coupon.list.column.start_date'|trans }}</th>
                            <th>{{ 'admin.coupon.list.column.end_date'|trans }}</th>
                            <th>{{ 'admin.coupon.list.column.label'|trans }}</th>
                            <th class="actions"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for coupon in coupons %}
                            <tr{% if not coupon.enabled %} class="highlight highlight-red"{% endif %}>
                                <td>{{ coupon.id }}</td>
                                <td><a href="{{ path('admin_coupon_edit', { 'id': coupon.id }) }}">{{ coupon.code }}</a></td>
                                <td>{{ coupon.type }}</td>
                                <td data-order="{{ coupon.launchDate|date('YmdHis') }}">{{ coupon.launchDate|date('d/m/y H:i', app.user.timezone) }}</td>
                                <td data-order="{{ coupon.startDate|date('YmdHis') }}">{{ coupon.startDate|date('d/m/y H:i', app.user.timezone) }}</td>
                                <td data-order="{{ coupon.endDate|date('YmdHis') }}">{{ coupon.endDate|date('d/m/y H:i', app.user.timezone) }}</td>
                                <td>{{ coupon.label }}</td>
                                <td class="actions"><a href="{{ path('admin_coupon_edit', { 'id': coupon.id }) }}" class="icon"><i class="s7-right-arrow"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}