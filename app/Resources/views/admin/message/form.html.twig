{% extends 'admin/layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% set activeTab = 'dashboard' %}
{% set activeMenu = 'message' %}

{% set title = 'admin.message.edit.title' %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-divider">
                    {{ title|trans }}
                </div>
                {% if (message.isNeedModerate()) %} 
                <div class="col-lg-offset-3 col-lg-9"> 
                    <b>Texte d'origine </b><br>
                    {{ origineText }}
                    
                </div>
                {% endif %}
                {% set attachmentDownloadPath = 'admin_order_message_attachment_download' %}
                <div class="panel-body pl-sm-5">
                    {{ form_start(form) }}
                        {{ form_errors(form) }}
                        {{ form_row(form.text) }}
                        {{ form_row(form.attachmentFile) }}
                       <div class="col-lg-offset-5 col-lg-9">
                        {% if message.attachmentName is not null %}
                                <a href="{{ path(attachmentDownloadPath, { 'id': message.id }) }}" target="_blank"><i class="fa fa-paperclip"></i> {{ message.attachmentOriginalName }}</a>
                       
                            {% endif %}
                        </div>
                        <div class="form-group">
                            
                            <div class="col-lg-offset-3 col-lg-9">
                                <button type="submit" id="form_submit" name="form[submit]" class="btn btn-space btn-primary"><i class="s7-diskette"></i> {{ 'form.save'|trans }}</button>
                                <a class="btn btn-space btn-secondary" href="{{ path('admin_message_list') }}">{{ 'form.cancel'|trans }}</a>
                            </div>

                        </div>
                    {{ form_end(form) }}

                    {{ form_start(form) }}
                        {{ form_widget(form) }}

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
{% endblock %}