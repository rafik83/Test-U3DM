{% extends 'admin/layout.html.twig' %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% set activeTab = 'dashboard' %}
{% set activeMenu = 'signal' %}

{% if signal is defined %}
    {% set title = 'admin.rating.edit.title' %}
{% endif %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading panel-heading-divider">
                    {{ title|trans }}
                </div>
                <div class="panel-body pl-sm-5">
                    {{ form_start(form) }}
                        {{ form_row(form.signalRef) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.email) }}
                        
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-9" align="right">
                                {{ form_row(form.enabled) }}
                                <button type="submit" id="form_submit" name="form[submit]" class="btn btn-space btn-primary"><i class="s7-diskette"></i> {{ 'form.save'|trans }}</button>
                                <a class="btn btn-space btn-secondary" href="{{ path('admin_signal_list') }}">{{ 'form.cancel'|trans }}</a>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}