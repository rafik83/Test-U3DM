{% extends 'admin/layout.html.twig' %}

{% set activeTab = 'user' %}
{% set activeMenu = 'user_list' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading panel-heading-divider">
                    {{ 'admin.user.list.title'|trans }}
                    <span class="panel-subtitle">{{ 'admin.user.list.subtitle'|trans }}</span>
                </div>
                <div class="panel-body">
                    <table id="table-user-list" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ 'admin.user.list.column.id'|trans }}</th>
                            <th>{{ 'admin.user.list.column.name'|trans }}</th>
                            <th>{{ 'admin.user.list.column.email'|trans }}</th>
                            <th>{{ 'admin.user.list.column.date_created'|trans }}</th>
                            <th>{{ 'admin.user.list.column.date_enabled'|trans }}</th>
                            <th class="actions"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td><a href="{{ path('admin_user_see', { 'id': user.id }) }}">{{ user.lastname|upper }} {{ user.firstname }}
                                {% if user.isControlAdmin() %} 
                                    <i class="s7-key"> admin</i> 
                                {% endif %}
                                {% if user.isDeleted() %} 
                                    <i class="s7-delete-user"> deleted</i>  
                                {% endif %}
                                </a></td>
                                <td>{{ user.email }}</td>
                                <td data-order="{{ user.createdAt|date('YmdHis') }}">{{ user.createdAt|date('d/m/Y H:i', app.user.timezone) }}</td>
                                <td data-order="{% if user.enabledAt is not null %}{{ user.enabledAt|date('YmdHis') }}{% else %}0{% endif %}">{% if user.enabledAt is not null %}{{ user.enabledAt|date('d/m/Y H:i', app.user.timezone) }}{% else %}{{ 'admin.empty'|trans }}{% endif %}</td>
                                <td class="actions"><a href="{{ path('admin_user_see', { 'id': user.id }) }}" class="icon"><i class="s7-right-arrow"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}