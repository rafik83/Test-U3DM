{% extends 'admin/layout.html.twig' %}

{% set activeTab = 'ref' %}
{% set activeMenu = 'ref_layer' %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading panel-heading-divider">
                    <div class="tools"><a href="{{ path('admin_layer_add') }}"><span class="icon s7-magic-wand"></span> {{ 'admin.layer.add.title'|trans }}</a></div>
                    {{ 'admin.layer.list.title'|trans }}
                    <span class="panel-subtitle">{{ 'admin.layer.list.subtitle'|trans }}</span>
                </div>
                <div class="panel-body">
                    <table id="table-ref-list" class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>{{ 'admin.layer.list.column.id'|trans }}</th>
                            <th>{{ 'admin.layer.list.column.name'|trans }}</th>
                            <th class="actions"></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for layer in refs %}
                            <tr{% if not layer.enabled %} class="highlight highlight-red"{% endif %}>
                                <td>{{ layer.id }}</td>
                                <td><a href="{{ path('admin_layer_edit', { 'id': layer.id }) }}">{{ layer.height }}</a></td>
                                <td class="actions"><a href="{{ path('admin_layer_edit', { 'id': layer.id }) }}" class="icon"><i class="s7-right-arrow"></i></a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}