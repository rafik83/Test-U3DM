        <div class="col-sm-2">
            <a class="collection-remove btn-sm" href="#">
                <span aria-hidden="true" class="glyphicon glyphicon-trash"></span>
            </a>
            <a class="collection-add btn-sm" href="#">
                <span aria-hidden="true" class="glyphicon glyphicon-plus"></span>
            </a>
        </div>
    </div>
{% endblock %}