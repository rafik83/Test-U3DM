{% extends 'front/user/base.html.twig' %}

{% block user_content %}
    <h1>{{ 'Gestion des commandes'|trans }}</h1>
    {% if 0 < orders|length %}
        <table id="table-command-list" class="table table-hover">
            <thead>
            <tr>
                <th>Date</th>
                <th>Référence de la commande</th>
                {% if app.user.maker is not null and app.user.maker.designer and app.user.maker.printer %}<th>Type</th>{% endif %}
                <th>Client</th>
                <th>État</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    <td data-order="{{ order.createdAt|date('YmdHis') }}">{{ order.createdAt|date('d/m/Y H:i', 'Europe/Paris') }}</td>
                    <td><a href="{{ path('order_maker_see', {'reference': order.reference}) }}">{{ order.reference }}</a></td>
                    {% if app.user.maker is not null and app.user.maker.designer and app.user.maker.printer %}<td>{{ order.readableType }}</td>{% endif %}
                    <td>{{ order.customer.lastname|upper }} {{ order.customer.firstname }}</td>
                    <td>{{ order.makerReadableStatus }}</td>
                    <td><a href="{{ path('order_maker_see', {'reference': order.reference}) }}">consulter</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>



        
    {% else %}
        <p>Vous n'avez reçu aucune commande à ce jour.</p>
    {% endif %}
{% endblock %}

