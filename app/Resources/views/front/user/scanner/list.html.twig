{% extends 'front/user/base.html.twig' %}

{% block user_content %}
    <h1>{{ 'Mes scanners'|trans }}</h1>
    <ul>
        {% for scanner in scanners %}
            <li>
                <a href="{{ path('user_scanner_edit', { 'id': scanner.id }) }}">{{ scanner.name }}</a> |
                {{ 'Technologie'|trans }} : {{ scanner.technology.name }} |
                Marque : {{ scanner.brand }} |
                {{ 'Disponibilité'|trans }} :
                {% if scanner.visible %}
                    <span style="color: green;">OK</span>
                {% else %}
                    <span style="color: red;">Non disponible </span>
                {% endif %}
                 | <a href="{{ path('user_scanner_delete', { 'id': scanner.id }) }}" onclick="return confirm(' Êtes-vous sur de vouloir supprimer ce scanner ?')" title="Supprimer ce scanner">
                    <i class="far fa-trash-alt"></i>
                </a>
                 | <a href="{{ path('user_scanner_clone', { 'id': scanner.id }) }}" onclick="return confirm(' Êtes-vous sur de vouloir dupliquer ce scanner ?')"  title="Dupliquer ce scanner">
                    <i class="far fa-copy"></i>
                </a>
            </li>
        {% endfor %}
    </ul>
    <div class="text-right">
        <a href="{{ path('user_scanner_add') }}" class="btn btn-default">Ajouter un scanner</a>
    </div>
{% endblock %}