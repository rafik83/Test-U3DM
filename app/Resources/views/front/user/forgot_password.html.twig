{% extends 'front/base.html.twig' %}
{% block meta %}
<meta title="title" content="J'ai perdu mon mot de passe" />
<meta property="description" content="Demandez un nouveau mot de passe en saissisant votre adresse mail." />
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            {% include 'front/common/flash.html.twig' %}
            <div class="col-sm-12">
                {% if error is defined %}
                    <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h2>{{ 'user.form.forgot_password.title'|trans }}</h2>
                {% if form is defined and form is not null %}
                    <p>{{ 'user.form.forgot_password.text'|trans }}</p>
                    <form action="{{ path('user_forgot_password') }}" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label required" for="username">{{ 'user.form.field.email'|trans }}</label>
                            <div class="col-sm-10">
                                <input class="form-control" type="text" id="email" name="email" required/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-rounded">{{ 'form.send'|trans }}</button>
                    </form>
                    <p><a href="{{ path('user_login') }}">{{ 'form.cancel'|trans }}</a></p>
                {% else %}
                    <p>{{ 'user.form.forgot_password.confirmation'|trans }}</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}